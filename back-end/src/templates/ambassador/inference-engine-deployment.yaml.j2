apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ engine_name }}-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ engine_name }}
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: {{ engine_name }}
    spec:
      containers:
        - name: {{ engine_name }}
          image: {{ image_name }}
          # imagePullPolicy: Always # TODO: uncomment when registry is properly set up
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: {{ port if port else 8080 }}
          {% if env %}
          env:
          {% for key, value in env.items()  %}
            - name: {{ key }}
              value: {{ value }}
          {% endfor %}
          {% endif %}
          readinessProbe:
            tcpSocket:
              port: {{ port if port else 8080 }}
            initialDelaySeconds: 10
            failuteThreshold: 50
            periodSeconds: 15
          livenessProbe:
            tcpSocket:
              port: 8080
            initialDelaySeconds: 360
            periodSeconds: 20
          resources:
            limits:
              nvidia.com/gpu: {{ num_gpus if num_gpus else 0 }}
